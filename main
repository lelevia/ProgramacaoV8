starts = [start5, startini, start1, start2, start3,start4,start7]
indice_atual = 0

async def statemachine():
    global indice_atual
    while True:
            if button.pressed(button.RIGHT) or button.pressed(button.LEFT):
                motion_sensor.reset_yaw(0)
                if indice_atual < len(starts):
                    await starts[indice_atual]()
                    indice_atual += 1

async def main():
    while indice_atual < len(starts):
        light_matrix.write(">")

        await statemachine()


runloop.run(main())
